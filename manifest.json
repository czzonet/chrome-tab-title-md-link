{
  "name": "Chrome Tab Title Md Link",
  "description": "Chrome 小插件：点击提取网页标题和链接，拼接用于 md 文档的链接格式。",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "/index.html",
    "default_icons": {
      "16": "/assets/icon.png",
      "32": "/assets/icon.png",
      "48": "/assets/icon.png",
      "128": "/assets/icon.png"
    }
  },
  "icons": {
    "16": "/assets/icon.png",
    "32": "/assets/icon.png",
    "48": "/assets/icon.png",
    "128": "/assets/icon.png"
  }
}
